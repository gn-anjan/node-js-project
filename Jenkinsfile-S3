pipeline{
    agent any
    environment{
        REACT_APP_VERSION = "2.$BUILD_ID"
    }
    stages{
        stage('Build'){
            agent{
                docker{
                    image "node:18-alpine"
                    reuseNode true
                }
            }
            steps{
                sh '''
                    npm install
                    npm run build
                '''
            }
        }
        stage('AWS S3 CLI'){
            agent{
                docker{
                    image "amazon/aws-cli:latest"
                    args "--entrypoint=''"
                    reuseNode true
                }
            }
            steps{
                withCredentials([usernamePassword(credentialsId: 'aws-config', passwordVariable: 'AWS_SECRET_ACCESS_KEY', usernameVariable: 'AWS_ACCESS_KEY_ID')]) {
                    sh '''
                        aws --version
                        aws s3 ls
                        aws s3 sync build s3://node-deployment-project --recursive
                    '''
                }
            }
        }
    }
}